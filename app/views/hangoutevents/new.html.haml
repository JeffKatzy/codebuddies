<h1>Propose A New Hangout</h1>
= simple_form_for @event do |form|
	.row		
		= form.label :title, "Hangout Information" 
		= form.input :title
	.row
		= form.input :start_date_day, as: :date, start_year: Date.today.year, end_year: Date.today.year + 1, order: [:day, :month, :year]
	.row
		= form.label :start_date_time, "Start Time:"
		= form.select("start_date_time", {"11:30 am" => "11:30 am", "12:30 pm" => "12:30 pm"})
	.row
		= form.input :description
	.row
		.actions
		= form.submit 'Propose Hangout', class: 'green button large padded fixed center'
	
